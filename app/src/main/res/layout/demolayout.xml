                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/greenwhole">

                            <TextView
                                android:id="@+id/red1"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
