<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardinner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/cardimg1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/homeper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card1Txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:text="Lowest"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/cardimg1"
                app:layout_constraintStart_toEndOf="@+id/cardimg1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card1Txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:text="$244.25"
                android:textColor="#F44336"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/cardimg1"
                app:layout_constraintStart_toEndOf="@+id/cardimg1"
                app:layout_constraintTop_toBottomOf="@+id/card1Txt1" />

            <TextView
                android:id="@+id/card1txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:text="$244.25+50.00"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/cardimg1"
                app:layout_constraintStart_toEndOf="@+id/cardimg1"
                app:layout_constraintTop_toBottomOf="@+id/card1Txt2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/upright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/card1txt3"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>